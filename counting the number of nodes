//FUNCTION FOR COUNTING THE NUMBER OF NODES

void count_of_nodes(struct node* head)
{
    int count = 0;
    if(head==NULL)
    {
        cout<<"The list is empty"<<endl;
    }
    //ptr pointer is created to traverse the list
    struct node* ptr = NULL;
    ptr=head;

    while(ptr!=NULL)
    {
        count++;
        ptr=ptr->link;
    }
    cout<<"Number of nodes: "<<count;

}
